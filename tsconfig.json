{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "outDir": "./scripts"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}

